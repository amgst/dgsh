<section id="section-id-{{ section.id }}" class="large-row container container--no-mobile-padding section-{{ section.id }}" data-section-id="{{ section.id }}"  data-section-type="video">
  <div class="page-width relative">
    {% if section.settings.title != blank %}
        <h3 class="doomlings-review-title">
            {{section.settings.title}}
        </h3>
    {% endif %}
    <div class="doomlings-review-section">
        {% for block  in section.blocks %}
            {% assign product = block.settings.product %}
            {% assign product_link = product.url | append :'#yotpoReviewsWidget' %}
            <div class="review_product">
                <a href="{{product_link}}">
                    {% render 'responsive-image', image: product.featured_media.preview_image %}
                    <div class="review_product_title">
                        {{ product.title }}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
     
  </div>
  
</section>

<style>
.doomlings-review-title {
    text-align: center;
}
.doomlings-review-section {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    margin-top: 30px;
}
.review_product {
    border: 4px solid #DADADA;
    border-radius: 12px;
    cursor: pointer;
    padding: 13px;
    text-align: center;
}
.review_product a {
    text-decoration: none;
}
.review_product:hover {
    border: 4px solid #50248F;
}



@media(max-width: 767px){
    
       .doomlings-review-section {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin-top: 20px;
    }
}


</style>
{% schema %}
  {
    "name": "Doomlings Review",
    "class": "doomlings-review",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Choose a Product Review"
        }
    ],
    "blocks": [
        {
        "type": "doomlings",
        "name": "Doomlings Product",
        "settings": [
          {
             "type": "product",
             "id": "product",
             "label": "Product"
          }
         
        ]
      }
    ],
    "presets": [
      {
        "name": "Doomlings Review",
        "category": "text"
      }
    ]
  }
{% endschema %}
