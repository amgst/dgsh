{% schema %}
  {
    "name": "Cards Last Section",
    "settings": [
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "Padding Top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "Padding Bottom",
          "default": 36
        },    
        {
            "type": "image_picker", 
            "id": "image-mobile",
            "label": "Image Mobile"
        },    
        {
            "type": "image_picker", 
            "id": "image-desktop",
            "label": "Image Desktop"
        },         
        {
          "type": "textarea",
          "id": "contents",
          "label": "Contents"
        }, 
        {
          "type": "html",
          "id": "section_title",
          "label": "Section Title",
          "default": "New Cards"
        }, 
        {
        "type": "checkbox",
        "id": "btn_enable",
        "label": "Show Button",
        "default": true
      },                                 
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "NOTIFY ME ON LAUNCH"
        }, 
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
    ],
    "presets": [
      {
        "category": "section",
        "name": "Cards Last Section"
      }
    ]
  }
{% endschema %}

<div class="da-hero-test section-{{ section.id }}-padding" style="overflow: hidden;" >
  <div class="main-contetns">  
    <p>{{ section.settings.contents}}</p>     
    <div class="section-title-image">
      {{ section.settings.section_title }}
    </div>
    <img
        alt="{{ block.settings.image-mobile.alt | escape }}"
        class="lazyload blur-up mobile-only"
        data-src="{{ section.settings.image-mobile | img_url: 'master' }}"
        src="{{ section.settings.image-mobile | img_url: 'master' }}"
    >   
    <img
        alt="{{ block.settings.image-desktop.alt | escape }}"
        class="lazyload blur-up desktop-only"
        data-src="{{ section.settings.image-desktop | img_url: 'master' }}"
        src="{{ section.settings.image-desktop | img_url: 'master' }}"
    >
    {% if section.settings.btn_enable %}
      <a class="btn-blue btn-blue-adj" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
    {% endif %}    
  </div>  
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }  

  @media (max-width: 768px) {
      .da-hero-test {
          {% if section.settings.mob-hero %}
          background-image: url('{{ section.settings.mob-hero | img_url: 'master' }}');
          {% endif %}
      }
  }
  @media (min-width: 769px) {
      .da-hero-test {
          {% if section.settings.desk-hero %}
          background-image: url('{{ section.settings.desk-hero | img_url: 'master' }}');
          {% endif %}
      }
  }
  #shopify-section-{{section.id}} .main-contetns {
    text-align: center;
    max-width: 750px;
    margin: 0 auto;
    display: flex;
    flex-direction: column; padding: 0 20px;
    align-items: center;
  }
.main-contetns p{ margin-bottom:70px; }

 #shopify-section-{{section.id}}  #do-hero{
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
  }


  #shopify-section-{{section.id}} .btn-blue-adj { margin-top:-55px; z-index:9; }
  @media (max-width: 768px) {
    .main-contetns p{margin-bottom:40px;}
    #shopify-section-{{section.id}} .btn-blue-adj { margin-top: -24px;margin-bottom: 80px;  }    
  }
</style> 