      style="right: {{ section.settings.gif_right4 }}%; top: {{ section.settings.gif_top4 }}%; width: {{ section.settings.gif_width4 }}%;" 
      data-image-url="{{ section.settings.image_4_url | img_url: 'master' }}">
  {% endif %}


</div>

