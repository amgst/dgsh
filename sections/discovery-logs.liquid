<div class="section-discovery main-desktop" id="section-{{ section.id }}" style="margin-top:-{{section.settings.margin}}px; {% if section.settings.zindex %}
  z-index: {{section.settings.zindex}};
{% endif %}">
  {% if section.settings.desk-hero %}
    <img src="{{ section.settings.desk-hero | img_url: '1200x' }}" class="main" alt="Section main image" style="width: 100%; height: auto;" usemap="#Map-desktop-{{ section.id }}"/>
  {% endif %} 
  {% if section.settings.custom_gif1 %}
    <img src="{{ section.settings.custom_gif1 | img_url: '400x' }}" alt="Custom GIF" class="gif-wrap gif-image1" 
      style="right: {{ section.settings.gif_right1 }}%; top: {{ section.settings.gif_top1 }}%; width: {{ section.settings.gif_width1 }}%;" 
      data-image-url="{{ section.settings.image_1_url | img_url: 'master' }}">
  {% endif %} 
  {% if section.settings.custom_gif2 %}
    <img src="{{ section.settings.custom_gif2 | img_url: '400x' }}" alt="Custom GIF" class="gif-wrap gif-image2" 
      style="right: {{ section.settings.gif_right2 }}%; top: {{ section.settings.gif_top2 }}%; width: {{ section.settings.gif_width2 }}%;" 
      data-image-url="{{ section.settings.image_2_url | img_url: 'master' }}">
