<div class="section-discovery-overlay" id="overlay-{{ section.id }}"></div>
<div class="section-discovery-popup" id="imagePopup-{{ section.id }}">
  <!-- <span class="section-discovery-close-btn" onclick="closePopup('{{ section.id }}')">&times;</span> -->
  <span class="section-discovery-close-btn" onclick="closePopup('{{ section.id }}')"><img src="{{ 'chest-x.png' | asset_url }}" alt="Close" /></span>
  <img src="" alt="Popup Image" id="popupImg-{{ section.id }}" class="popup-image">
</div>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function() {    
