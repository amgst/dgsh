<style>  
#plush-profs{
    background-color: #CEF8FF;
    padding-bottom: 180px;
}

#plush-profs > div.plush-hero{
    max-width: 912px;
    margin: auto;
    text-align: center;
    margin-bottom: 90px;
}

#plush-profs > div.plush-hero > img:nth-child(2){
    max-width: 636px;
    width: 100%;
    margin-top: 70px;
}

#plush-profs > div.plush-blocks{
    max-width: 870px;
    margin: auto;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
        flex-wrap: wrap;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
    padding: 0 44px;
    row-gap: 70px;
}

div.plush-card{
    max-width: 312px;
    width: 100%;
}

#plush-profs > div.plush-blocks > div > p:nth-child(2){
    margin-top: 0;
    margin-bottom: 9px;
    font-size: 34px;
    color: #262718;
    font-family: Catastrophe;
}

#plush-profs > div.plush-blocks > div > p:nth-child(3){
    font-size: 16px;
    line-height: 24px;
    color: #262718;
    margin: 9px 0 16px 0;
    font-family: Lato;
}

#plush-profs > div.plush-blocks > div> div > a{
    max-width: 240px;
    display: block;
    height: 63px;
    text-align: center;
    line-height: 58px;
    font-size: 21px;
    color: white;
    background-color: #DB3CD5;
    text-decoration: none;
    border: 4px solid #FFFFFF;
    border-radius: 20px;
    -webkit-box-shadow: 0px 3px 6px #00000029;
            box-shadow: 0px 3px 6px #00000029;
    margin: auto;
}

#plush-profs > div.plush-blocks > div > div:nth-child(1){
    padding-bottom: 100%;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
}

@media(max-width: 767px){

    #plush-profs > div.plush-blocks{
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
            -ms-flex-direction: column;
                flex-direction: column;
        -webkit-box-pack: center;
            -ms-flex-pack: center;
                justify-content: center;
        row-gap: 66px;
        -webkit-box-align: center;
            -ms-flex-align: center;
                align-items: center;
    }

    #plush-profs > div.plush-hero > img:nth-child(2){
        padding: 0 45px;
        margin-top: 29px;
    }

    #plush-profs > div.plush-hero{
        margin-bottom: 15px;
    }
    
}

  @media(max-width: 786px){

    #plush-profs > div.plush-hero > img{
        max-width: 150%;
        width: 110%;
        position: relative;
        left: -5%;
    }

    #plush-profs > div.plush-hero{
        overflow: hidden;
        margin-bottom: -6%;
    }
    
}
  div.plush-card > div[style*="shteve-plush-shad"]{
    background-position: center -17px !important;
}

div.plush-card > div[style*="scutes-plush-shad"],
div.plush-card > div[style*="allistair-plush-shad"],
div.plush-card > div[style*="trixie-plush-shad"]{
    background-size: 110% !important;
}
</style>

<div id="plush-profs">

    <div class="plush-blocks">
        {% for block in section.blocks %}
          <div class="plush-card">
            <div style="background-image: url('{{ block.settings.image | img_url:'master' }}')"></div>
            <p>{{ block.settings.name }}</p>
            <p>{{ block.settings.description }}</p>
            <div>
                <a href="{{ block.settings.card_link }}">{{ block.settings.link_txt }}</a>
            </div>
          </div>
        {% endfor %}
    </div>
</div>

{% schema %}
  {
    "name": "Plushie Profiles",
    "settings": [],
    "blocks": [
      {
        "type": "Card",
        "name": "Card Block",
        "settings": [
          {
            "type": "image_picker",
            "label": "Plushie Image",
            "id": "image"
          },
          {
            "type": "inline_richtext",
            "label": "Plushie Name",
            "id": "name"
          },
          {
            "type": "inline_richtext",
            "label": "Plushie Description",
            "id": "description"
          },
          {
            "type": "url",
            "label": "Product Link",
            "id": "card_link"
          },{
            "type": "text",
            "label": "Link Text",
            "id": "link_txt",
            "default": "SHOP NOW"
          }  
        ]
      }
    ],
    "presets": [
      {
        "category": "image",
        "name": "Plushie Profies"
      }
    ]
  }
{% endschema %}

