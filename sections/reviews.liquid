{% schema %}
{
  "name": "Reviews",
  "max_blocks": 10,
  "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },        
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    }
  ],
  "blocks": [

  ],
  "presets": [
    {
      "category": "section",
      "name": "Reviews"
    }
  ]
} 
 

{% endschema %}  
<div class="container large-section section-{{ section.id }}-padding do-reviews section-{{ section.id }} "> 
  <div class="page-width">
	{% if section.settings.section_title %}
		<div class="section_title ">
			<h2>{{ section.settings.section_title }}</h2>
		</div>
	{% endif %}

