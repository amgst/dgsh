{% schema %}
{
  "name": "Content Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "color",
      "id": "paragraph_color",
      "label": "Paragraph Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Content Section"
    }
  ]
}
{% endschema %}

<div class="content-section" style="background-color: {{ section.settings.background_color }}">
  {% if section.settings.heading != blank %}
    <h2 style="color: {{ section.settings.heading_color }}">{{ section.settings.heading }}</h2>
  {% endif %}
  
  {% if section.settings.paragraph != blank %}
    <p style="color: {{ section.settings.paragraph_color }}">{{ section.settings.paragraph }}</p>
  {% endif %}
</div>

<style>
  .content-section {
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 10px;
  }
  .content-section h2 {
    font-size: 48px;
    font-family: "Poppins";    
    text-align: center; 
    font-weight: bold;
    margin-bottom: 15px;
  }
  .content-section p {
    font-size: 19px;
    line-height: 22px;
    font-family: "Poppins";    
    text-align: center;
    font-weight: 600;
  }
  @media (min-width:768px){
    .content-section p {
      font-size: 28px;
      line-height: 34px;
    }
  }
</style>