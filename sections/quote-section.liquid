{% schema %}
{
  "name": "Quote",
  "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },        
    {
      "type": "text",
      "id": "quote",
      "label": "Quote",
      "default": "This game is the worst, I never win!"
    },
    {
      "type": "text",
      "id": "quote_author",
      "label": "Quote Author",
      "default": "Joel McHale"
    },  
    {
      "type": "text",
      "id": "video",
      "label": "Video",
      "default": "https://youtu.be/afoamAWYxNQ"
    }, {
      "type": "image_picker",
      "id": "custom_image",
      "label": "Custom Image",
      "info": "Upload an image for the responsive display"},      
    {
        "type": "image_picker",
        "id": "brand_image",
        "label": "Brand Image"
    },       
    {
        "type": "image_picker",
        "id": "brand_image_mobile",
        "label": "Brand Image Mobile"
    },      
     {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Better Reviews"
      },
     {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }    
  ],
  "presets": [
    {
      "category": "section",
      "name": "Quote"
    }
  ]
}
 

{% endschema %}
<div id="octavian-quote">
    <!-- Desktop Image -->
    <img
        alt="{{ section.settings.brand_image.alt | escape }}"
        class="lazyload brand_img desktop-image"
        data-src="{{ section.settings.brand_image | img_url: 'master' }}"
        src="{{ section.settings.brand_image | img_url: 'master' }}"
    >
    <!-- Mobile Image -->
    <img
        alt="{{ section.settings.brand_image_mobile.alt | escape }}"
        class="lazyload brand_img mobile-image"
        data-src="{{ section.settings.brand_image_mobile | img_url: 'master' }}"
        src="{{ section.settings.brand_image_mobile | img_url: 'master' }}"
        
    >                 
   <a target="_blank" rel="noopener noreferrer" href="{{ section.settings.video }}"> <div class="main-wrap-oct">

        <div>
            <div id="da-responsive-hero">
                {% if section.settings.custom_image != blank %}
                <picture>
                    <source media="(max-width: 768px)" srcset="{{ section.settings.custom_image | img_url: 'master' }}">
                    <source media="(min-width: 769px)" srcset="{{ section.settings.custom_image | img_url: 'master' }}">
                    <img src="{{ section.settings.custom_image | img_url: 'master' }}" alt="Custom Image">
                </picture>
                {% endif %}
            </div></a>

            <div class="text-wrap-oct">
                <img alt="5 golden stars"
                    src="https://cdn.shopify.com/s/files/1/0554/6190/4593/files/stars_ff1a92c6-6af4-4082-9097-2b0988bff24e_430x.png?v=1707857734">
                <h2>"{{ section.settings.quote }}"</h2>
                <p>â€“ {{ section.settings.quote_author }}</p>
                <p><a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a></p>
            </div>
        </div>
    </div>
</div>

{% style %}
    #octavian-quote {
        padding: 50px 20px;
        max-width: 894px;
        margin: 0 auto;
        text-align: center;
    }
    #octavian-quote img.brand_img { margin-bottom: -26px;}
    /* This CSS hides the mobile image on larger screens */
    .mobile-image {
        display: none;
    }

    /* Media query for mobile devices */
    @media (max-width: 768px) {
        /* Show the mobile image */
        .mobile-image {
            display: block;
        }
        /* Hide the desktop image */
        .desktop-image {
            display: none;
        }
    }

{% endstyle %}